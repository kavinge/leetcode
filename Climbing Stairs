/*
You are climbing a stair case. It takes n steps to reach to the top.

Each time you can either climb 1 or 2 steps. In how many distinct ways can you climb to the top?
*/

#include <iostream>

using namespace std;

int climbStairs(int n)
{
    if(n==0)
    {
        return 0;
    }
    if(n==1)
    {
        return 1;
    }
    int a1=1,a2=1;
    int result;
    for(int i=2; i<=n; i++)
    {
        result=a1+a2;
        a1=a2;
        a2=result;
    }
    return result;

}
