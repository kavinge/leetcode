/*
Divide two integers without using multiplication, division and mod operator.
*/

#include <iostream>

using namespace std;

int divide(int aa,int bb){
    unsigned int a=(unsigned int)aa;
    unsigned int b=(unsigned int)bb;
    int positive=1;
    if(aa<0){
        positive=-positive;
        a=-a;
    }
    if(bb<0){
        positive=-positive;
        b=-b;
    }
    if(b==1){
        return positive==1?a:-a;
    }

    int result=0,k;
    unsigned int divisor;
    while(a>=b){
        for(k=0,divisor=b;a-divisor>=divisor;divisor<<=1,k++){

        }
        result+=(1<<k);
        a-=divisor;
    }
    return positive==1?result:-result;
}
