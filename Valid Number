/**
Validate if a given string is numeric.

Some examples:
"0" => true
" 0.1 " => true
"abc" => false
"1 a" => false
"2e10" => true

Note: It is intended for the problem statement to be ambiguous. You should gather all requirements up front before implementing one.
**/

#include <iostream>
#include <string.h>
using namespace std;

bool isNumber(const char *s) {
    while(*s==' ')s++;
    if(*s=='+'||*s=='-') s++;
    const char *e=s+strlen(s)-1;
    while(*e==' ') e--;
    bool isNumeric=false;
    bool isDot=false;
    bool isE=false;
    while(s<=e){
        if(*s>='0'&&*s<='9'){
            isNumeric=true;
        }else if(*s=='.'){
            if(isDot||isE) return false;
            isDot=true;
        }else if(*s=='e'){
            if(isE||!isNumeric) return false;
            isE=true;
            isNumeric=false;
        }else if(*s=='+'||*s=='-'){
            if(*(s-1)!='e') return false;
            isNumeric=false;
        }else{
            return false;
        }
        s++;
    }
    return isNumeric;
}

int main()
{
    cout << isNumber(" -12.10 ") << endl;
    return 0;
}
