#include <iostream>
#include <vector>
/**
You are given a string, S, and a list of words, L, that are all of the same length.
Find all starting indices of substring(s) in S that is a concatenation of each word in L exactly once and without any intervening characters.

For example, given:
S: "barfoothefoobarman"
L: ["foo", "bar"]

You should return the indices: [0,9].
(order does not matter).
**/

using namespace std;

bool helper(int *starts,int i,int sn,int ln,int s,int flag){
    if(i>=sn||starts[i]==0) return false;
    for(int j=0;j<ln;j++){
        if((starts[i]&(1<<j))&&!((1<<j)&flag)){
            int tFlag=flag|(1<<j);
            if(tFlag==((1<<ln)-1)){
                return true;
            }else{
                return helper(starts,i+s,sn,ln,s,tFlag);
            }
        }
    }

    return false;
}

vector<int> findSubstring(string S, vector<string> &L) {
    vector<int> result;
    int sn=S.size(),ln=L.size();
    if(sn==0||ln==0) return result;
    int *starts=new int[sn]();
    int ss=L[0].size();
    for(int i=0;i<=sn-ss;i++){
        string temp=S.substr(i,ss);
        for(int j=0;j<ln;j++){
            if(L[j]==temp){
                starts[i]|=(1<<j);
            }
        }
    }
    for(int i=0;i<=sn-ss*ln;i++){
        if(helper(starts,i,sn,ln,ss,0)){
            result.push_back(i);
        }
    }
    return result;

}

int main()
{
    vector<string> L(5206,"a");
    cout<<findSubstring("",L).size()<<endl;

    return 0;
}
