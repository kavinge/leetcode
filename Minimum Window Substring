/*
Given a string S and a string T, find the minimum window in S which will contain all the characters in T in complexity O(n).

For example,
S = "ADOBECODEBANC"
T = "ABC"

Minimum window is "BANC".

Note:
If there is no such window in S that covers all characters in T, return the emtpy string "".

If there are multiple such windows, you are guaranteed that there will always be only one unique minimum window in S.
*/

class Solution {
public:
    string minWindow(string S, string T) {
        unordered_map<char,int> targets;
        queue<int> is;
        for(int i = 0; i < T.length();i++){
            targets[T[i]] = 0;
        }
        for(int i = 0; i < T.length();i++){
            targets[T[i]] ++;
        }
        int count = 0,start,window = 0x7fffffff,result_start=-1;
        for(int i = 0; i < S.length(); i++){
            if(targets.find(S[i]) != targets.end()){
                is.push(i);
                if((--targets[S[i]]) >= 0){
                    count++;
                }
                if(count<T.length()) continue;
                while(!is.empty()){
                    start = is.front();
                    if(targets[S[start]] == 0) break;
                    targets[S[start]]++;
                    is.pop();
                }
                if(i-start+1<window){
                    result_start = start;
                    window = i-start+1;
                }
            }
        }
        return result_start==-1?"":S.substr(result_start,window);
    }
};
